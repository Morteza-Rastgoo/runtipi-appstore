{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "wordpress4",
      "image": "wordpress:6.8.1",
      "isMain": true,
      "internalPort": 80,
      "environment": {
        "WORDPRESS_DB_HOST": "wordpress4-db",
        "WORDPRESS_DB_NAME": "wordpress4",
        "WORDPRESS_DB_USER": "tipi",
        "WORDPRESS_DB_PASSWORD": "${DB_PASSWORD}"
      },
      "dependsOn": ["wordpress4-db"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/wordpress4",
          "containerPath": "/var/www/html"
        }
      ]
    },
    {
      "name": "wordpress4-db",
      "image": "mariadb:11.1.3",
      "environment": {
        "MYSQL_ROOT_PASSWORD": "${DB_ROOT_PASSWORD}",
        "MYSQL_DATABASE": "wordpress4",
        "MYSQL_USER": "tipi",
        "MYSQL_PASSWORD": "${DB_PASSWORD}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/mariadb",
          "containerPath": "/var/lib/mysql"
        }
      ]
    }
  ]
}